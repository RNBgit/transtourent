<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".menu_nav">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow"
        tools:context=".home">

        <TextView
            android:background="@color/violet"
            android:id="@+id/vehicles"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="VEHICLES"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_below="@id/app_logo"
            android:layout_centerInParent="true"
            android:paddingLeft="100dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:paddingRight="50dp"
            android:paddingTop="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/logo"/>



        <ImageView
            android:id="@+id/back"
            android:layout_width="380dp"
            android:layout_height="580dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:paddingTop="200dp"
            android:src="@drawable/bk2hd"/>

        <TextView
            android:id="@+id/van"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="BUS"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_below="@id/vehicles"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"/>

        <View
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_marginTop="-1dp"
            android:layout_below="@id/van"
            android:background="@color/white"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_below="@id/van"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/yellow"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/van1"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_below="@id/van"
            android:layout_marginLeft="4dp"
            android:src="@drawable/bus_logo"/>

        <Button
            android:id="@+id/viewdatails1"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_below="@id/van1"
            android:layout_marginLeft="30dp"
            android:text="View Details"
            android:background="@drawable/btn2"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:paddingTop="-5dp"
            android:layout_marginTop="1dp"/>

        <Button
            android:id="@+id/booknow1"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_below="@id/van1"
            android:layout_marginLeft="110dp"
            android:text="Book NOw"
            android:background="@drawable/btn2"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:paddingTop="-6dp"
            android:layout_marginTop="1dp"/>

        <ImageView
            android:layout_marginTop="20dp"

            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_below="@id/van"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/yellow"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/van_logo"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_below="@id/van"
            android:layout_marginRight="-20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bus_logo"/>

        <Button
            android:id="@+id/viewdatails2"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_below="@id/van1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110dp"
            android:text="View Details"
            android:background="@drawable/btn2"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:paddingTop="-5dp"
            android:layout_marginTop="1dp"/>

        <Button
            android:id="@+id/booknow2"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_below="@id/van1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="Book NOw"
            android:background="@drawable/btn2"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:paddingTop="-6dp"
            android:layout_marginTop="1dp"/>

        <ImageView
            android:layout_marginTop="70dp"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_below="@id/van_logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/yellow"/>

        <ImageView
            android:id="@+id/van3"
            android:layout_marginTop="75dp"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_below="@id/van_logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bus_logo"/>

        <Button
            android:id="@+id/viewdatails3"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_below="@id/van3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="124dp"
            android:text="View Details"
            android:background="@drawable/btn2"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:paddingTop="-5dp"
            android:layout_marginTop="1dp"/>

        <Button
            android:id="@+id/booknow3"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_below="@id/van3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="124dp"
            android:text="Book NOw"
            android:background="@drawable/btn2"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:paddingTop="-6dp"
            android:layout_marginTop="1dp"/>




    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>


</androidx.drawerlayout.widget.DrawerLayout>